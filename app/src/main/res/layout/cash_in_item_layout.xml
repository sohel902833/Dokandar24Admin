<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    >
    <LinearLayout
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="2.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    />
                <TextView
                    android:id="@+id/c_NameTv"
                    android:textSize="14sp"
                    android:textColor="#00D176"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bkash"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    />
                <TextView
                    android:id="@+id/c_PhoneTv"
                    android:textSize="14sp"
                    android:textColor="#00D176"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iTask24"
                    />

            </LinearLayout>

             <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="2dp"
                    android:textSize="9sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    />
                <TextView
                    android:id="@+id/c_timeTv"
                    android:textSize="9sp"
                   android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05-03-2002"
                    />

            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/c_amountTv"
                   android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0"
                   android:textSize="20sp"
                   android:layout_marginLeft="10dp"
                   android:textStyle="bold"
                   android:textColor="#00D176"
                   />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/c_ImageView"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/paid"
                android:layout_centerVertical="true"
               />
            <Button
                android:id="@+id/paidButton"
                android:visibility="gone"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
               android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_2"
                android:text="Paid"
                android:textColor="#fff"
                android:textAllCaps="false"

                />



        </RelativeLayout>






    </LinearLayout>




</androidx.cardview.widget.CardView>